@model List<GifAtMe.Service.DTOs.GifEntryDTO>

<div class="jumbotron">
    <h1>Gif List</h1>
    <p class="lead">Use this site to view the gifs you've uploaded via robort.</p>
</div>
<div class="container-fluid" ng-controller="gifsCtrl">
    <div class="row">
        <div class="col-md-2">
            Keyword Search: <input ng-model="gifFilter.keyword">
        </div>
            <table class="table">
                <tr>
                    <td>Keyword</td>
                    <td>Index</td>
                    <td>URL</td>
                </tr>
                <tr ng-repeat="gif in userGifs | filter:gifFilter">
                    <td>{{gif.Keyword}}</td>
                    <td>{{gif.AlternateIndex}}</td>
                    <td><img ng-src="{{gif.Url}}" /></td>
                </tr>
            </table>
        </div>
</div>
<script>
    gifAtMeApp.value('userGifs', @Html.Raw(Json.Encode(Model)))
</script>